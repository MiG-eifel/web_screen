<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/connectionURLTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connection_url" />

    <TextView
        android:id="@+id/urlTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/remoteControlEnableSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_remote_control" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="@string/button_start"
        android:textOn="@string/button_stop" />


</LinearLayout>
